<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MapFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/float_zoom_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="floatingactionbutton"
            android:focusable="true"
            android:foregroundGravity="right"
            android:src="@drawable/ic_map_zoom_in"
            app:backgroundTint="@color/white"
            app:borderWidth="0dp"
            app:tint="@null" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/float_zoom_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:contentDescription="floatingactionbutton"
            android:focusable="true"
            android:foregroundGravity="right"
            android:src="@drawable/ic_map_zoom_out"
            app:backgroundTint="@color/white"
            app:borderWidth="0dp"
            app:tint="@null" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:contentDescription="floatingactionbutton"
            android:focusable="true"
            android:foregroundGravity="right"
            android:src="@drawable/map_my_location_search"
            app:backgroundTint="@color/white"
            app:borderWidth="0dp"
            app:tint="@null" />

    </LinearLayout>

</FrameLayout>